<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="card">
      <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <h5 class="card-header">Change your password</h5>
        <div class="card-body">
          <%= f.hidden_field :reset_password_token %>
          <%= f.password_field :password, autocomplete: "new-password", label: "New password" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", label: "Confirm new password" %>
        </div>
        <div class="card-footer">
          <%= f.submit "Change my password" %>
        </div>
      <% end %>
    </div>

    <%= render "devise/shared/links" %>
  </div>
</div>
