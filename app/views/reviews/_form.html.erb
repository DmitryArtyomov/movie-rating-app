<turbo-frame id="current-user-review">
  <div class="card">
    <div class="card-body">
      <%= bootstrap_form_for(review) do |f| %>
        <%= f.hidden_field :movie_id, value: review.movie_id %>
        <div class="d-flex justify-content-between mb-3">
          <div class="stars-input" data-controller="stars">
            <%= f.hidden_field :rating, data: { 'stars-target': 'input' } %>
          </div>
          <%= f.submit "Submit" %>
        </div>
        <%= f.text_area :text, hide_label: true, rows: 5, wrapper: { class: '' } %>
      <% end %>
    </div>
  </div>
</turbo-frame>
